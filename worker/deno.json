{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.window", "esnext"],
    "strict": true
  },

  "imports": {
    "@oak/oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
    "pdf-parse": "npm:pdf-parse@2.4.5",
    "stripe": "npm:stripe@20.2.0"
  },

  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 100
  },

  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --env-file=.env main.ts"
  }
}


